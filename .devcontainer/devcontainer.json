{
    "name": "Node Dev Container",
    "image": "mcr.microsoft.com/devcontainers/typescript-node:22",
    "postCreateCommand": "npm install",
    "forwardPorts": [3000],
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode"
            ]
        }
    },
    "remoteUser": "node"
}